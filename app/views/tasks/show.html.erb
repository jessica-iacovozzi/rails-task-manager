<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<% if @task.completed == false %>
  <p><i class="fa-regular fa-square"></i>This task is not completed yet</p>
<% elsif @task.completed == true %>
  <p><i class="fa-regular fa-square-check"></i>This task is completed</p>
<% end %>

<%= link_to 'Edit task', edit_task_path %>

<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>

<%= link_to 'Back to index', tasks_path %>
